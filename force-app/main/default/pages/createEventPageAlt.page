                                        <div class = "section-item-text">Event Date </div>
                                        <input type="date" id="eventDate" class="field"/>
                                    </div>
                                    <div class = "section-item">
                                        <div class = "section-item-text">Event Location</div>
                                        <input type="Text" id="eventLocation" class="field"/>
                                    </div>
